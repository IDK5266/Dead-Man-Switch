    </building>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <recipes>
      <li>ResurrectMediumMech</li>
      <li>ResurrectHeavyMech</li>
      <li>DMS_Make_VerlingBird</li>
      <li>DMS_Make_TrashBin</li>
      <li>DMS_Make_Hound</li>
      <li>DMS_Make_Hound_RC</li>
      <li>DMS_Make_Hound_FS</li>
      <li>DMS_Make_Soldat</li>
      <li>DMS_Make_Sergeant</li>
      <li>DMS_Make_Ronin</li>
      <li>DMS_Make_Arquebusier</li>
      <li>DMS_Make_Reptile</li>
    </recipes>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
        <idlePowerDraw>50</idlePowerDraw>
      </li>
    </comps>
  </ThingDef>

</Defs>	